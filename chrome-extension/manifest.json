{
  "manifest_version": 3,
  "name": "Accute - AI Practice Management",
  "version": "1.0.0",
  "description": "Quick task creation and AI-powered workflow automation for accounting professionals",
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "tabCapture",
    "notifications",
    "contextMenus",
    "scripting"
  ],
  "host_permissions": [
    "https://*.accute.ai/*",
    "http://localhost:5000/*"
  ],
  "optional_host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background/service-worker.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Accute - Quick Add Task"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+A",
        "mac": "Alt+A"
      },
      "description": "Open Accute quick add"
    },
    "quick-task": {
      "suggested_key": {
        "default": "Ctrl+Shift+T",
        "mac": "Command+Shift+T"
      },
      "description": "Quick add task from current page"
    }
  }
}
